all:
	(cd cfsqp; make)
	(cd lp_solve_4.0; mkdir src; tar -zx -C src -f lp_solve.tar.gz; make)
	(cd cm2hmm-1.0; make -f Makefile.test)

clean:
	-rm -f *~
	(cd cm2hmm-1.0; make clean -f Makefile.test)
	(cd lp_solve_4.0; make clean)
	(cd cfsqp; make clean)

distclean:
	make clean
	(cd cm2hmm-1.0; make distclean -f Makefile.test)
	(cd cfsqp; make distclean)
	(cd lp_solve_4.0; make distclean; rm -r src)
	-rm Makefile
